{
  "name": "timetable-erp",
  "version": "1.0.0",
  "description": "Timetable ERP System - Frontend & Backend",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build:frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:production": "npm run clean && npm run build:frontend",
    "start": "npm run start --workspace=backend",
    "start:production": "cross-env NODE_ENV=production npm run start --workspace=backend",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test --workspace=backend",
    "clean": "node -e \"const fs=require('fs'); const path='frontend/dist'; if(fs.existsSync(path)) fs.rmSync(path, {recursive:true}); console.log('✅ Cleaned build outputs')\"",
    "postinstall": "echo ✅ All dependencies installed successfully!",
    "preview": "npm run preview --workspace=frontend",
    "check": "concurrently \"npm run check:backend\" \"npm run check:frontend\"",
    "check:backend": "node backend/src/server.js --check || echo Backend check complete",
    "check:frontend": "npm run build --workspace=frontend",
    "deploy:prepare": "npm run clean && npm run build:frontend && echo ✅ Project ready for deployment",
    "pre-push": "npm run build && echo ✅ Build validated - safe to push"
  },
  "keywords": ["timetable", "erp", "management"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "@supabase/supabase-js": "^2.38.0",
    "uuid": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "axios": "^1.3.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1",
    "jest": "^29.5.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "tailwindcss": "^3.2.7",
    "postcss": "^8.4.21",
    "autoprefixer": "^10.4.13"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
